CREATE TABLE


CREATE TABLE petugas_pln(
id_petugas CHAR(20) NOT NULL,
nama VARCHAR (50) NOT NULL,
nomor_telpon VARCHAR(12) NOT NULL,
alamat_kantor_cabang_pln VARCHAR(250) NOT NULL);

CREATE TABLE lampu(
kode_lampu CHAR(20) NOT NULL,
status BOOLEAN);


CREATE TABLE  Pemadaman(
no_pemadaman INT NOT NULL,
tanggal DATE NOT NULL,
jam TIME NOT NULL,
deskripsi VARCHAR(500) NOT NULL);

CREATE TABLE  penggunaan_listrik(
tagihan NUMERIC NOT NULL);
